@using NewsSystem.Data.ViewModels.Tags

@model IEnumerable<TagClientViewModel>

@if (Model.Count() > 0)
{
    foreach (var tag in Model)
    {
        <a href="@Url.Action("ByTagName", "News", new { id = tag.Id, name = Html.CleanerUrl(tag.Name) })">@tag.Name@if (Model.Last().Id != tag.Id) {<text>, </text>}</a>
    }
}
