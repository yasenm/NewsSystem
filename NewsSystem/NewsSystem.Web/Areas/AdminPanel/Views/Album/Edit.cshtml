@using NewsSystem.Data.ViewModels.Albums

@model AlbumEditViewModel

<div class="container">

    <div class="panel-heading">
        <h3 class="panel-title">@Model.Name</h3>
    </div>
    @using (Html.BeginForm("Edit", "Album", FormMethod.Post, new { }))
    {
        @Html.AntiForgeryToken()

        <div class="list-group panel-body">
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Text, new { })
                @Html.TextAreaFor(m => m.Text, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Text, null, new { @class = "text-danger" })
            </div>

            <div>
                <button type="submit" value="Edit" class="btn btn-default">Edit</button>
                <a href="@Url.Action("Index", "AlbumCategories")" class="btn btn-sm btn-danger">Cancel</a>
            </div>
        </div>
    }
</div>