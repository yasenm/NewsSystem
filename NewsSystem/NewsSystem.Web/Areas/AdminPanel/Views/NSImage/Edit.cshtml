@using NewsSystem.Data.ViewModels.NSImages

@model NSImageEditViewModel

<div class="container-fluid">
    <div class="panel-heading">
        <h3 class="panel-title">Image - @Model.Id</h3>
    </div>

    @using (Html.BeginForm("Edit", "NSImage", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.Id, new { @Value = Model.Id })
        <div class="list-group panel-body">
            <div class="form-group">
                @Html.LabelFor(m => m.Text, new { })
                @Html.TextBoxFor(m => m.Text, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Text, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="tokenfield" value="red,green,blue" />
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Extension, new { })
                @Html.TextAreaFor(m => m.Extension, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Extension, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div>
                    <label for="PostedContent">Chose picture</label>
                    <input type="file" name="PostedContent" id="PostedContent" class="btn btn-default" />
                </div>
            </div>

            <div>
                <button type="submit" value="Edit" class="btn btn-default">Edit</button>
                <a href="@Url.Action("Index", "NSImage")" class="btn btn-sm btn-danger">Cancel</a>
            </div>
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/admin-panel-ns-images")

    <script>
        APP.NSImages.init();
    </script>
}