@using NewsSystem.Data.ViewModels.Surveys

@model IEnumerable<AnswerViewModel>

<div class="panel panel-default">
    <div class="panel-heading">
        @if (Model.Count() > 0)
        {
            <span>Answers :</span>
        }
        else
        {
            <span>No answers found.</span>
        }
    </div>
    @foreach (var answer in Model)
    {
        <div class="panel-body">
            <div class="col-md-10">
                @answer.Description
            </div>
            <div class="col-md-2">
                <a href="@Url.Action("Remove", "Answer")" data-answerid="@answer.Id" data-questionid="@answer.QuestionId" class="btn btn-danger remove-answer-btn">Remove</a>
            </div>
        </div>
    }
</div>